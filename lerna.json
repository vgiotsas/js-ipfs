{
  "lerna": "3.22.0",
  "packages": [
    "packages/*",
    "examples/*"
  ],
  "version": "independent",
  "command": {
    "bootstrap": {
      "hoist": true,
      "nohoist": [
        "ipfs-css",
        "tachyons",
        "libp2p-delegated-content-routing",
        "libp2p-delegated-peer-routing"
      ]
    },
    "run": {
      "stream": true
    },
    "publish": {
      "message": "chore: publish",
      "createRelease": "github",
      "conventionalCommits": true
    },
    "version": {
      "private": false
    }
  }
}
